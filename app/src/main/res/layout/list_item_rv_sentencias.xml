<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutSentencias"
    android:background="@color/colorAccent"
    android:layout_height="wrap_content"
    android:paddingVertical="1dp"
    tools:targetApi="o">
    <android.support.v7.widget.CardView
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="3dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:id="@+id/linearLayoutAllMensajes"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:layout_height="match_parent">
           <ImageView
               android:layout_width="75dp"
               android:layout_height="75dp"
               android:id="@+id/icono_pdf"
               android:src="@drawable/icono_pdf"/>
            <TextView
                android:layout_marginVertical="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del expediente"
                android:textColor="#000000"
                android:id="@+id/txt_nombre_exp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/icono_pdf"
                android:layout_toRightOf="@+id/icono_pdf"
                android:textSize="18sp"
                />
            <TextView
                android:layout_marginVertical="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Magistrado"
                android:textColor="#000000"
                android:paddingRight="5dp"
                android:id="@+id/txt_magistrado"
                android:layout_toEndOf="@+id/icono_pdf"
                android:layout_toRightOf="@+id/icono_pdf"
                android:layout_below="@+id/txt_nombre_exp"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha sentencia"
                android:textColor="#000000"
                android:id="@+id/txt_fecha_sentencia"
                android:layout_toEndOf="@+id/icono_pdf"
                android:layout_toRightOf="@+id/icono_pdf"
                android:layout_below="@+id/txt_magistrado"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textStyle="italic"
                />




        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>